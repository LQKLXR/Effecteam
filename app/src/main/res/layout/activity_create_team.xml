<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/create_team_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_actionPadding="20dp"
        app:tb_centerGravity="center"
        app:tb_titleText="创建团队"
        app:tb_titleTextSize="@dimen/textSize15"
        app:tb_useThemeColor="true"
        />

    <LinearLayout
        android:id="@+id/linear_create_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="团队名称"
            android:textSize="20sp"></TextView>
        <EditText
            android:id="@+id/create_team_input_name_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入团队名称"
            android:maxLength="20"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"></EditText>
    </LinearLayout>

    <!--机构名称-->
    <LinearLayout
        android:id="@+id/linear_create_team_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_create_team_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="团队机构"
            android:textSize="20sp"></TextView>
        <EditText
            android:id="@+id/create_team_input_org_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入团队机构名称"
            android:maxLength="40"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"></EditText>
    </LinearLayout>

    <!--团队简介-->
    <LinearLayout
        android:id="@+id/linear_create_team_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/linear_create_team_organization">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="团队简介"
            android:textSize="20sp"></TextView>
        <EditText
            android:id="@+id/create_team_input_info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入团队简介"
            android:maxLength="60"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"></EditText>
    </LinearLayout>

</RelativeLayout>