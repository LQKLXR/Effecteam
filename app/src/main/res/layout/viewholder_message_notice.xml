<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/viewholder_message_notice_teamhead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_round_textview"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/viewholder_message_notice_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/viewholder_message_notice_teamname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:maxEms="20"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/viewholder_message_notice_teaminfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:maxEms="20"
            android:ellipsize="end"
            android:singleLine="true"/>
    </RelativeLayout>
</LinearLayout>