<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--日期-->
    <TextView
        android:id="@+id/viewholder_team_chat_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="2021年10月6日"/>
    <!--时间-->
    <TextView
        android:id="@+id/viewholder_team_chat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="10:20"/>
    <!--接收到的信息-->
    <LinearLayout
        android:id="@+id/viewholder_team_chat_linear_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/viewholder_team_chat_receive_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_round_textview"
            android:text="名称"
            android:layout_gravity="top"
            android:gravity="center"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/viewholder_team_chat_receive_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名称1"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/viewholder_team_chat_receive_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/drawable_chat_left_text"
                android:text="你好"
                android:maxWidth="300dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!--发送的信息-->
    <LinearLayout
        android:id="@+id/viewholder_team_chat_linear_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/viewholder_team_chat_send_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名称1"
                android:layout_marginRight="10dp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/viewholder_team_chat_send_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/drawable_chat_right_text"
                android:text="你好hao好好好好你好hao好好好好你好hao好好好好你好hao好好好好"
                android:textSize="20sp"
                android:maxWidth="300dp"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"/>
        </LinearLayout>
        <TextView
            android:id="@+id/viewholder_team_chat_send_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_round_textview"
            android:text="名称"
            android:layout_gravity="top"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>