<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp">

    <!--团队名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/viewholder_project_list_team_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="@color/BLACK"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <com.xuexiang.xui.widget.button.RippleView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            app:rv_type="rectangle">
            <TextView
                android:id="@+id/viewholder_project_list_project_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/xui_config_color_white"
                android:textSize="15sp" />
        </com.xuexiang.xui.widget.button.RippleView>
        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/viewholder_project_list_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="≡"
            android:textColor="@color/xui_config_color_white"
            android:gravity="center"
            android:textSize="15sp"
            app:sb_ripple_color="@color/projectUrgent3"/>
    </LinearLayout>



</LinearLayout>